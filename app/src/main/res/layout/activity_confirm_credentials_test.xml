<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.song.example.account.ConfirmCredentialsTestActivity">

    <TextView
        android:id="@+id/textView0"
        android:layout_width="117dp"
        android:layout_height="32dp"
        android:layout_marginStart="8dp"
        android:gravity="center_vertical"
        android:text="User Name:"
        tools:layout_editor_absoluteY="46dp"
        tools:layout_editor_absoluteX="8dp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="211dp"
        android:layout_height="32dp"
        android:layout_marginStart="22dp"
        android:gravity="center_vertical"
        android:hint="name"
        app:layout_constraintLeft_toRightOf="@+id/textView0"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView0" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="117dp"
        android:layout_height="32dp"
        android:layout_marginLeft="-6dp"
        android:layout_marginStart="8dp"
        android:gravity="center_vertical"
        android:text="Enter Password:"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="49dp"
        app:layout_constraintTop_toBottomOf="@+id/textView0" />

    <EditText
        android:id="@+id/edittext"
        android:layout_width="213dp"
        android:layout_height="52dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="22dp"
        android:gravity="center_vertical"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/textView2"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="84dp"
        android:text="Confirm"
        android:onClick="handleConfrim"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edittext" />

</android.support.constraint.ConstraintLayout>
