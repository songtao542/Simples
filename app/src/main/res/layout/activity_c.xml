<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.le.testapplication.CActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/root"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/toSingleTop"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="To Single Top" />

            <Button
                android:id="@+id/toSingleTask"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="To Single Task" />

            <Button
                android:id="@+id/toD"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="To D" />

            <Button
                android:id="@+id/toD1"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="To D\nFLAG_ACTIVITY_MULTIPLE_TASK" />

            <Button
                android:id="@+id/toOA1"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="To OA in other app\nFLAG_ACTIVITY_NEW_TASK" />

            <Button
                android:id="@+id/toOA2"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="To OA in other app\nFLAG_ACTIVITY_CLEAR_TASK\nFLAG_ACTIVITY_NEW_TASK" />

        </LinearLayout>

    </ScrollView>
</android.support.constraint.ConstraintLayout>
